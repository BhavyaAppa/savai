<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.myorder.ui.MyOrderFragment">




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivEmptyCart"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_gift_box" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNoOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/no_orders"
            android:textColor="@color/purple_dark_main"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivEmptyCart" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNoPlaced"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/you_have_not_placed_any_order_with_us_yet"
            android:textColor="@color/purple_dark_main"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="@id/tvNoOrder"
            app:layout_constraintStart_toStartOf="@id/tvNoOrder"
            app:layout_constraintTop_toBottomOf="@id/tvNoOrder" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>